                            </GridViewColumn>
                            <GridViewColumn Header="主讲人">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}"></TextBlock>
